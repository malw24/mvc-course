{% extends 'base.html.twig' %}

{% block title %}Slumpmässig bok: {{title}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main>
    <div class="library-wrapper">
        <h1>{{title}}</h1>
        <img style="text-align:center;" src={{ asset('img/{{image_link}}') }} alt="{{title}}-bild">
        {# src="{{ asset('img/samurai.png') }} #}
        <p><b>ISBN:</b> {{isbn}}</p>
        <p><b>Författare:</b> {{author}}</p>
        
    </div>
</main>
{% endblock %}
