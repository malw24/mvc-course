{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<main>
    <div class="update-wrapper">
        <h1>Uppdatera: {{book.title}}</h1>
        <form class="update-wrapper" method="POST" action="{{ path('book_update_current') }}">
            <input type="hidden" name="theId" value="{{ book.id }}">
            <input class="update-input" type="text" name="title" placeholder="Nuvarande titel: {{book.title}}">
            <input class="update-input" type="text" name="isbn" placeholder="ISBN: {{book.isbn}}">
            <input class="update-input" type="text" name="author" placeholder="Författare: {{book.author}}">
            <input class="update-input" type="text" name="image"  placeholder="Bildlänk: {{book.image}}">
            <button class="update-btn" type="submit">Uppdatera</button>
        </form>
    </div>
</main>
{% endblock %}
